<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp" android:background="@drawable/round"
    android:layout_height="150dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp">

    <ImageView
        android:id="@+id/newImage"
        android:src="@drawable/pets"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/newName"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="페르시안 / 여아"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/newAddr"
        android:text="충청남도 진흥군"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>